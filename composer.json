{
  "name": "blade/database",
  "type": "library",
  "description": "PHP Database interface library",
  "license": "MIT",
  "authors": [{
    "name": "Maxim Oleinik",
    "email": "maxim.oleinik@gmail.com"
  }],

  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "ext-pdo": "*",
    "ext-pgsql": "*",
    "ext-mysqli": "*",
    "phpunit/phpunit": "5.*"
  },

  "autoload": {
    "psr-4": {
      "Blade\\Database\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blade\\Database\\Test\\": "test/lib"
    }
  },

  "config": {
    "sort-packages": true
  }
}
